@model IEnumerable<SurveyDemoApp.Models.Submission>

@QuestionModel IEnumerable<SurveyDemoApp.Models.Question>

@{
    ViewData["Title"] = "Index";
}

<h2>Create New Submission</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @foreach (var item in QuestionModel)
            {
                @Html.DisplayFor(modelItem => item.QuestionText)
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">QuestionText</label>
                <input class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

