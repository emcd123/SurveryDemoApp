@model SurveyDemoApp.ViewModels.NewSubmissionViewModel

@{
    ViewBag.Title = "Create";
}
<h3>Please complete the following form</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="POST" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < Model.allQuestions.ToList().Count; i++)
            {
                <div class="form-group">
                    <input name="QuestionId" asp-for="@Model.allSubmissions.ToList()[i].QuestionId" type="hidden" value="@Model.allQuestions.ToList()[i].Id" class="control-label" />
                    <label class="control-label">@Model.allQuestions.ToList()[i].QuestionNo</label>
                    <label class="control-label">@Model.allQuestions.ToList()[i].QuestionText</label>
                    <input name="AnswerText" asp-for="@Model.allSubmissions.ToList()[i].AnswerText" type="text" class="form-control" />
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
